//create LargestSmallest.java 

//import Scanner
import java.util.Scanner;

//create public class
public class LargestSmallest {
	
	//main method 
	public static void main (String [] args) {
		
		//create Scanner 
		Scanner input = new Scanner (System.in);
		
		//initialize variables
		int large = 1;
		int small = 1;
		int count = 0;
		
		
		//counter-controlled iteration 
		
		while (count < 15) { //loop 15 times
		count = count + 1; //increase counter 
		System.out.print("Enter number: "); //prompt
		int numb = input.nextInt(); //read integer
		
			//if else statements for largest and smallest 
			if (numb > large) {
				large = numb;
			} else if (numb < large) {
				small = numb;
			}
		
			
		} //end while 
		
		//Display largest and smallest numbers
		
		System.out.printf("%nThe Largest number is %d%n", large);
		System.out.printf("%n The Smallest number is %d%n", small);
		
	} //end main
	
}//end class 
		
			
